@inject NavigationManager NavigationManager

<MudNavMenu Class="mt-2">

    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Início</MudNavLink>
    
    <MudDivider Class="my-3" />

    <!-- Seção de Tarefas -->
    <MudNavGroup Title="TAREFAS" Icon="@Icons.Material.Filled.ChecklistRtl">

        <MudNavLink Href="/tarefa/board" Match="NavLinkMatch.Prefix"
                    Icon="@Icons.Material.Filled.ViewKanban"
                    Class="ml-2">
            Board
        </MudNavLink>

        <MudNavLink Href="tarefa/lista" Match="NavLinkMatch.Prefix"
                    Icon="@Icons.Material.Filled.Assignment"
                    Class="ml-2">
            Lista
        </MudNavLink>

        <MudNavLink Href="/tarefa/criar"
                    Icon="@Icons.Material.Filled.AddCircle" 
                    Class="ml-2">
            Criar Tarefa
        </MudNavLink> 
    </MudNavGroup>

    <MudDivider Class="my-3" />

    <!-- Seção de usuarios -->
    <MudNavGroup Title="USUÁRIOS" Icon="@Icons.Material.Filled.Groups">

        <MudNavLink Href="/usuario/lista" Match="NavLinkMatch.Prefix"
                    Icon="@Icons.Material.Filled.ManageAccounts"
                    Class="ml-2">
            Listar
        </MudNavLink>

        <MudNavLink Href="/usuario/criar" Match="NavLinkMatch.Prefix"
                    Icon="@Icons.Material.Filled.PersonAdd"
                    Class="ml-2">
            Criar
        </MudNavLink>
    </MudNavGroup>

    <!-- Seção de Setor -->
    <MudNavGroup Title="SETORES" Icon="@Icons.Material.Filled.Folder">

        <MudNavLink Href="/setor/lista" Match="NavLinkMatch.Prefix"
                    Icon="@Icons.Material.Filled.Folder"
                    Class="ml-2">
            Listar
        </MudNavLink>

        <MudNavLink Href="/setor/criar" Match="NavLinkMatch.Prefix"
                    Icon="@Icons.Material.Filled.AddCircle"
                    Class="ml-2">
            Criar
        </MudNavLink>
    </MudNavGroup>

    <!-- Seção de empresas -->
    <MudNavGroup Title="EMPRESAS" Icon="@Icons.Material.Filled.Work">

        <MudNavLink Href="/empresa/lista" Match="NavLinkMatch.Prefix"
                    Icon="@Icons.Material.Filled.Work"
                    Class="ml-2">
            Listar
        </MudNavLink>

        <MudNavLink Href="/empresa/criar" Match="NavLinkMatch.Prefix"
                    Icon="@Icons.Material.Filled.AddCircle"
                    Class="ml-2">
            Criar
        </MudNavLink>
    </MudNavGroup>

    <MudDivider Class="my-3" />

</MudNavMenu>
